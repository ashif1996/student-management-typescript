{
  "compilerOptions": {
    "target": "ES2020",              
    "module": "ES2020",              
    "moduleResolution": "Node",      
    "outDir": "./dist",              
    "rootDir": "./src",              
    "strict": true,                  
    "esModuleInterop": true,         
    "resolveJsonModule": true,       
    "declaration": true,             
    "declarationMap": false,          
    "noEmit": false                  
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "public", "views"]
}