{
    "compilerOptions": {
      "target": "ES6",
      "module": "ES6",
      "moduleResolution": "Node",
      "lib": ["DOM", "ES6"],
      "strict": true,
      "sourceMap": true,
      "outDir": "./public/js",   // Compiled JS files
      "rootDir": "./public/ts"   // TypeScript source files
    },
    "include": ["public/ts/**/*.ts"],  // Only include .ts files in public/ts
    "exclude": ["node_modules", "dist", "src", "views"],
}